{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"],
        "import/extensions": ["error", "always", { "ignorePackages" : true } ],
        "prettier/prettier": ["error", {
            "endOfLine": "crlf",
            "trailingComma": "es5"
        }]
    }
}
